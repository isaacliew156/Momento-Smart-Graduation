# secrets.toml.example - Streamlit Configuration Template
# Copy this file to .streamlit/secrets.toml and fill in actual values
# ====================================================================

# Application Configuration
[app]
debug_mode = false
show_confidence = true
auto_save_scans = true

# Staff Portal Password
# IMPORTANT: Change this to a secure password for production!
staff_password = "change_this_secure_password"

# Performance Settings
[performance]
max_face_size = 1024
min_face_confidence = 0.8
qr_scan_timeout = 10  # seconds
face_verification_threshold = 0.4
ic_matching_threshold = 0.5

# Database Configuration
[database]
json_indent = 2
auto_backup = true
backup_interval = 3600  # seconds
duplicate_prevention_window = 60  # seconds

# System Settings
[system]
camera_index = 0  # Default camera
fps_limit = 30
max_scan_iterations = 300

# ====================================================================
# IMPORTANT SECURITY NOTES:
# ====================================================================
# 1. NEVER commit secrets.toml to version control
# 2. Change the default staff password immediately
# 3. Keep this file in .streamlit/ folder only
# 4. Set appropriate file permissions (read-only for others)
# ====================================================================
